datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
 id       Int        @id @default(autoincrement())
 email    String     @unique
}

model Book {
  id      Int    @id @default(autoincrement())
  title String
  type  String
  author String
  topic String
  publicationDate DateTime
}

model Pet {
  id      Int    @id @default(autoincrement())
  name String
  age Int
  type String
  breed String
  microchip Boolean
}